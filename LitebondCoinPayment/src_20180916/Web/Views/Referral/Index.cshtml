@model Core.Domain.Models.RefModel
@{
    ViewBag.Title = "Referral";
    int noIndex = 0;
    var totalSales = (float)Model.TotalSales;
}


<!-- new template -->

<h2 class="user-panel-title">Referral</h2>
<h5>Invite your friends and family and recive free comissions</h5>
<p><strong>Each member recives a unique referral link to share with everyone and recive a bonus - 10% of the value of their escrowing.</strong></p>
<p>The referral link may be used during a escrowing, and can repeat many times.</p>
<p>Imagine giving your unique referral link to your crypto-friend and he or she escrows using your link, the bonus will be sent to your account automatically. The strategy is simple: the more links you send to your collagues, friends or others - the more litecoin you may earn!</p>
<h6>Your unique referral link</h6>
<div class="refferal-info">
    <span class="refferal-copy-feedback copy-feedback"></span>
    <em class="fas fa-link"></em>
    <input type="text" class="refferal-address copy-address" value="@Model.refLink" disabled>
    <a href="#" class="refferal-copy copy-trigger"><em class="ti ti-files"></em></a>
</div><!-- .refferal-info -->
<div class="gaps-2x"></div>

<h4>Refferal Statistics</h4>
<div class="refferal-statistics">
    <div class="row">
       
        <div class="col-md-6">
            <div class="refferal-statistics-item">
                <h6 data-toggle="tooltip" data-placement="bottom" title="Total of referral in your network">Total Network Referral</h6>
                <span data-toggle="tooltip" data-placement="bottom" title="Total of referral in your network">@Model.TotalRefOfNetwork MEMBERS</span>
            </div>
        </div>
        <div class="col-md-6">
            <div class="refferal-statistics-item">
                <h6 data-toggle="tooltip" data-placement="bottom" title="Total deposit of your network ercrowed">Total Sales</h6>
                <span data-toggle="tooltip" data-placement="bottom" title="Total deposit of your network ercrowed">@totalSales LTC</span>
            </div>
        </div>
    </div>
</div>

<div class="gaps-1x"></div>
<h4>Refferal Lists</h4>
<table id="example" class="data-table refferal-table">
    <thead>
        <tr>
            <th><span>No</span></th>
            <th class="refferal-name"><span>Email</span></th>
            <th class="refferal-tokens"><span>Level</span></th>
            <th class="refferal-bonus"><span>Total Deposit</span></th>
            <th class="refferal-channel"><span>Status</span></th>
            <th class="refferal-date"><span>Date</span></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RefList)
        {
            noIndex++;
            var totalDeposit = (float)item.TotalDeposit;
            <tr>
                <td>@noIndex</td>
                <td class="refferal-name">@item.Email</td>
                <td class="refferal-tokens">@item.Level</td>
                <td class="refferal-bonus">@totalDeposit LTC</td>
                <td class="refferal-channel">@item.Status</td>
                <td class="refferal-date">@item.CreatedAt.ToShortDateString()</td>
            </tr>
        }
    </tbody>
</table>


