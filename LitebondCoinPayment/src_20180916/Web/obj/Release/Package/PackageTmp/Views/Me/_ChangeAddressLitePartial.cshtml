@model WebUI.Models.ProfileViewModel

<div class="col-md-12">
    @using (Html.BeginForm("ChangeWalletAddress", "Me", FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <h3>Change Address</h3>
        <div class="input-item input-with-label">
            <label for="full-name" class="input-item-label">Your Litecoin Address</label>
            <input class="input-bordered" type="text" id="addresslite" name="addresslite" placeholder="Enter New Address" value="@Model.WalletAddress" required>
        </div>
        <div class="input-item input-with-label">
            <label for="full-name" class="input-item-label">Two-Factor Security (2FA)</label>
            <input class="input-bordered" type="number" id="two2faAddress" name="two2faAddress" placeholder="Enter 2FA Token" value=""  required>
        </div>
        <div class="d-sm-flex justify-content-between align-items-center">
            <button class="btn btn-primary">Update</button>
            <div class="gaps-2x d-sm-none"></div>
        </div>
    }
</div>