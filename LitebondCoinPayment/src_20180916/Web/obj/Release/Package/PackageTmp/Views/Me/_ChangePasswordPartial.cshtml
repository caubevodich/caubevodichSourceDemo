@model WebUI.Models.ProfileViewModel
<div class="col-md-12">

    @using (Html.BeginForm("ChangePassword", "Me", FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })

        <h3>Change Password</h3>
        <div class="input-item input-with-label">
            <label for="full-name" class="input-item-label">Old Password</label>
            <input class="input-bordered" type="password" id="OldPassword" name="OldPassword" placeholder="Old Password" required>
        </div>
        <div class="input-item input-with-label">
            <label for="full-name" class="input-item-label">New Password</label>
            <input class="input-bordered" type="password" id="NewPassword" name="NewPassword" placeholder="New Password" value="" required>
        </div>
        <div class="input-item input-with-label">
            <label for="full-name" class="input-item-label">Confirm Password</label>
            <input class="input-bordered" type="password" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" value="" required>
        </div>
        if (Model.TwoFactorEnabled)
        {
            <div class="input-item input-with-label">
                <label for="full-name" class="input-item-label">Two-Factor Security (2FA)</label>
                <input class="input-bordered" type="number" id="two2fapass" name="two2fapass" placeholder="Enter 2FA Token" value="" required>
            </div>
        }
        <div class="note note-plane note-info">
            <em class="fas fa-info-circle"></em>
            <p>Password should not be empty.</p>
        </div>
        <div class="d-sm-flex justify-content-between align-items-center">
            <button class="btn btn-primary">Update</button>
            <div class="gaps-2x d-sm-none"></div>
        </div>
    }
</div>