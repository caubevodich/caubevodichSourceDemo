@model IEnumerable<Core.Domain.Models.ReferralModel>
@{
    ViewBag.Title = "Referral";
    int noIndex = 0;
}

<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/dataTables.bootstrap4.min.css" />
<div class="card">
    <div class="card-header">
        <i class="icon-people"></i> @ViewBag.Title
        <div class="card-header-actions"></div>
    </div>
    <div class="card-body">
        <div class="col-sm-12">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th width="30">No</th>
                        <th>Email</th>
                        <th style="width:50px; ">Level</th>
                        <th>Total Deposit</th>
                        <th width="50">Status</th>
                        <th width="100">Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        noIndex++;
                        <tr>
                            <td style="text-align:center">@noIndex</td>
                            <td>@item.Email</td>
                            <td style="text-align:center">@item.Level</td>
                            <td>@item.TotalDeposit</td>
                            <td style="text-align:center">
                                <span class="badge badge-success">@item.Status</span>
                            </td>
                            <td style="text-align:center">@item.CreatedAt.ToShortDateString()</td>
                        </tr>

                    }
                </tbody>
                <tfoot>
                    <tr>
                        <th>No</th>
                        <th>Email</th>
                        <th>Level</th>
                        <th>Total Deposit</th>
                        <th>Status</th>
                        <th>Date</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/datatables/1.10.19/js/dataTables.bootstrap4.min.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#example').DataTable({ "paging": false });
        });
    </script>
}