@model WebUI.Models.SendCodeViewModel
@{
    ViewBag.Title = "Send";
}

<section>
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
               

                
            </div>
            <div class="col-md-9">
                <div class="white-box clearfix">
                  @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form", role = "form" }))
                  {
 
                        @Html.AntiForgeryToken()
                        @Html.Hidden("rememberMe", @Model.RememberMe)
                        <div class="acc-view">
                            <h3 style="margin-top:0">Nhận mã xác thực</h3>
                            <hr style="margin-bottom:10px">

                            @Html.ValidationSummary("", new { @class = "text-danger" })
                            <ul class="clearfix" style="width:300px; padding-left:0; list-style:none">
                                <li>

                                    <label>     Select Two-Factor Authentication Provider:</label>
                                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)

                                </li>

                                <li>&nbsp;</li>
                                <li class="button pull-right">
                                    <button type="submit" class="btn btn-primary btn-sm"><span class="glyphicon glyphicon-phone" style="margin-right:10px"></span>Gửi</button>
                                </li>
                            </ul>
                        </div>


                    }


                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
